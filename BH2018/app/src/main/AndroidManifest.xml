<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.miguel909.bh2018">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".CreateAccountActivity"
                  android:label="Create Account"
                  android:parentActivityName=".LoginActivity"
                  android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".AdminActivity"
                  android:label="Admin">
        </activity>
        <activity android:name=".AddProductActivity"
                  android:label="Add Product"
                  android:parentActivityName=".AdminActivity"
                  android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".EditCredentialsActivity"
                  android:label="Edit Credentials"
                  android:parentActivityName=".AdminActivity"
                  android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".SellerInformationActivity"
                  android:label="Seller Information"
                  android:parentActivityName=".AdminActivity"
                  android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>